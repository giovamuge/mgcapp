                        <!--
                                        <Label Text="{Binding Path=DateCreate}"
                                               Style="{StaticResource HandleLabelSecondary}" />
                                    </StackLayout>
                                </Grid>
                            </Grid>
                        </ViewCell>-->


                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Grid>
    </ContentPage.Content>
