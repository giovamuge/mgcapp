<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:Mugelli.Software.It.Mgc.Behaviors;assembly=Mugelli.Software.It.Mgc"
             x:Class="Mugelli.Software.It.Mgc.Pages.NewsPage"
             Title="{Binding Title}"
             Icon="{Binding Icon}"
             BindingContext="{Binding NewsViewModel, Source={StaticResource ViewModelLocator}}"
             BackgroundColor="WhiteSmoke">
    <ContentPage.Content>
        <Grid>
            <ListView
                ItemsSource="{Binding NewsList}"
                BackgroundColor="Transparent"
                RowHeight="400"
                SeparatorVisibility="None"
                SelectedItem="{Binding ReadArticleCommand, Mode=TwoWay}">


                <ListView.Behaviors>
                    <!--<behaviors:ListViewSelectedItemBehavior Command="{Binding ReadArticleCommand}"
                                                            Converter="{StaticResource SelectedItemEventArgsToSelectedItemConverter}" />-->
                    <behaviors:EventToCommandBehavior Command="{Binding ReadArticleCommand}"
                                                      EventName="ItemSelected"
                                                      Converter="{StaticResource SelectedItemEventArgsToSelectedItemConverter}" />
                </ListView.Behaviors>

                <ListView.ItemTemplate>
                    <DataTemplate>

                        <ViewCell>
                            <ViewCell.View>
                                <AbsoluteLayout Padding="14">

                                    <StackLayout Orientation="Vertical" 
                                                 Spacing="0" 
                                                 VerticalOptions="Fill"
                                                 AbsoluteLayout.LayoutFlags="All" 
                                                 AbsoluteLayout.LayoutBounds="0,0,1,1"
                                                 Padding="30"
                                                 IsVisible="{Binding Path=Id, Converter={StaticResource IsNullToBoolConverter}}">

                                        <Label Text="Non esiste" 
                                               FontSize="Large" 
                                               TextColor="{StaticResource GrayDark}"
                                               HorizontalTextAlignment="Center" />
                                    </StackLayout>

                                    <StackLayout Orientation="Vertical"
                                                 BackgroundColor="{StaticResource SecondaryTextColor}" 
                                                 Spacing="0"
                                                 VerticalOptions="FillAndExpand"
                                                 AbsoluteLayout.LayoutFlags="All" 
                                                 AbsoluteLayout.LayoutBounds="0,0,1,1"
                                                 IsVisible="{Binding Path=Id, Converter={StaticResource IsNotNullToBoolConverter}}">

                                        <Image Source="{Binding Path=HeroImage}" 
                                               Aspect="AspectFill"
                                               HorizontalOptions="Fill"
                                               Opacity=".8" />

                                        <StackLayout Padding="16,10" 
                                                     Spacing="4">

                                            <Label Text="{Binding Path=ShortTitle}" 
                                                       FontSize="Large"
                                                       Style="{StaticResource TitleLabelPrimary}"
                                                       VerticalOptions="CenterAndExpand" />

                                            <Label Text="{Binding Path=Subtitle}"
                                                   Style="{StaticResource BodyLabelPrimary}"
                                                   VerticalOptions="CenterAndExpand"></Label>

                                            <Grid Padding="0,10" 
                                                      MinimumHeightRequest="36" 
                                                      MinimumWidthRequest="44">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="36" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="36" />
                                                </Grid.RowDefinitions>

                                                <Image Source="Clock_50px.png"
                                                           Grid.Column="0"/>
                                                <Label Grid.Column="1" 
                                                           Text="{Binding Path=DateCreate}"
                                                           VerticalOptions="Center"
                                                           Style="{StaticResource Sub}"
                                                           IsVisible="true" />
                                            </Grid>
                                        </StackLayout>
                                    </StackLayout>
                                </AbsoluteLayout>
                            </ViewCell.View>
                        </ViewCell>

                        <!-- SOLUZIONE ALTERNATIVA -->

                        <!--<ViewCell>
                            <Grid RowSpacing="5" ColumnSpacing="0" Margin="10,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
